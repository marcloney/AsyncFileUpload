module.exports = function(grunt) {

  grunt.initConfig({
    package: grunt.file.readJSON('package.json')
  , ugligy: {
      build: {
        src: 'js/main.js'
      , dest: '<%= package.name %>-<% package.version %>.min.js'
      }
    }
  });

  grunt.loadNpmTasks('grunt-contrib-uglify');

  grunt.registerTask('default', ['uglify']);
});
